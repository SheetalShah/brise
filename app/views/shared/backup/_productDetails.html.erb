<link href='http://fonts.googleapis.com/css?family=Rancho' rel='stylesheet' type='text/css'>
<div class="row-fluid">
  <redcolor class="text-left font15">About me: </redcolor><br/>
  <div class="backcolor displayblock">
    <div class="row-fluid">
      <div class="span12 bold text-center"><aboutme>Product <%= @product.name %>:</aboutme></div> 
      <div class="span12"><%= best_in_place @product, :description, :type => :textarea, :nil => "N/A - Click to provide a generic product description common to all brands" %></div><br/>
      <% @product.brands.each do |brand| %>
        <%= render 'shared/brand', :brand => brand, :product => @product %>
      <% end %>
    </div>
  </div>
</div>

