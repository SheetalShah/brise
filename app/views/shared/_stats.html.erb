<% @user ||= current_user %>
<div class="stats">
  <a href="<%= following_user_path(@user) %>"><%= render 'users/follow_form' %>   
    <strong id="following" class="stat">
      <%= @user.followed_users.count %>
    </strong>
    following
  </a>
  <a href="<%= followers_user_path(@user) %>">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    followers
  </a>
  <a href="<%= following_ad_user_path(@user) %>">
    <strong id="followers" class="stat">
      <%= @user.followedads.count %>
    </strong>
    following ads
  </a>
</div>


