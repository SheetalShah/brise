<% statobject ||= current_user %><br/>
    <% if isValidFollowingType(statobject) %>
      Following:
      <div class="stats">
        <a href="<%= following_user_path(statobject) %>">
          <strong class="stat">
            <%= statobject.followed_users.count %>
          </strong>
          users
        </a>
        <a href="<%= following_ad_user_path(statobject) %>">
          <strong class="stat">
            <%= statobject.followedads.count %>
          </strong>
          ads
        </a>
        <a href="<%= following_product_user_path(statobject) %>">
          <strong class="stat">
            <%= statobject.followedproducts.count %>
          </strong>
          products
        </a>
      </div>
    <% end %>
    Followers:
    <div class="stats">
      <a href="<%= followers_user_path(statobject) %>">
        <strong id="followers" class="stat">
          <%= statobject.followers.count %>
        </strong>
        users
      </a>
    </div>

