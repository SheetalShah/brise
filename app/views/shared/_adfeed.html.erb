<div class="container-fluid">
<div class="row-fluid">
<div class="span10">
<h3-no-padding>Ad Feed(<%= @user.feed.count %>)</h3-no-padding>
</div>
<div class="span2 float-right-text">
      <nav>
        <ul class="nav">
	<li class="downdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">By:<%= @user.show_ads_by %><b class="caret"></b></a>	    
         <ul class="dropdown-menu">
	  <li><%= link_to "All", :controller => "users", :action => :show_all_ads, :id => @user %></li>
          <li><%= link_to "followedusers", :controller => "users", :action => :show_followedusers_ads, :id => @user %></li>
          <li><%= link_to "followedads", :controller => "users", :action => :show_followedads_ads, :id => @user %></li>
	</ul>
        </li></ul>

      </nav>

</div>
</div>

<div class="center">
  <% if @user.feed.any? %>
    <ol class="ads collection">
      <%= render @ads, :current_user => @current_user %>
    </ol>
  <% end %>
</div>


