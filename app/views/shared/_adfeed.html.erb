          <li><%= link_to "followedproducts", user_ads_path( @user, :show_ads_by => "followedproducts" ) %></li>
	</ul>
        </li></ul>
      </nav>
</div>
</div>
<div>
  <% if @user.feed.any? %>
    <ol class="ads collection">
      <%= render @ads, :current_user => @current_user %>
    </ol>
  <% end %>
</div>


