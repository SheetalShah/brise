<!DOCTYPE html> 
<html lang="en"> 
<head> 
<meta charset="utf-8"> 
</head>
<body>
  <%= render 'layouts/header' %>
    <div class="row-fluid">
     <aside>	
        <div class="unit span2">
          <div id="help"><h3><%= link_to "#{@user.display_name}", new_user_path %></h3></div>
	  <div id="modal">
            <div id="helpcontent">
              <p>
		<div class="row-fluid">
		<div class="placecenter span4">
		  <%= @user.display_name %>
		</div>
		<div class="span8 smallfont">
		<div class="row-fluid">
		  <div class="span5">1. Type: </div><div class="span7"><%= @user.user_type %></div><br><br/>
		  <div class="span5">2. Address:</div>
		  <div class="span7">
		    <%= @user.street_address1 %>,<br/>
                    <%= @user.street_address2 %>,<br/>
                    <%= @user.city %>-<%= @user.zip_code %>,<br/>
                    <%= @user.state %>,<br/>
                    <%= @user.country %>
		  </div>
		</div>
                </div>
		</div>
              </p>
            </div>
          </div>
          <section>
            <%= render 'shared/stats' %>
          </section>
	  <br>
          <section>
            <%= render 'shared/adpost_form' %>
          </section>
        </div>
        <div class="center span6">  
	  <section>
            <%= render 'shared/adfeed' %>
          </section>
        </div>
      </aside>
    </div>
   	
  </body>
</html>
