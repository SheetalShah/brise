<!DOCTYPE html5> 
<html lang="en"> 
<head> 
<%= javascript_include_tag "jquery-ui.min.js", "highcharts", "exporting" %>
<%= stylesheet_link_tag "gmaps4rails" %>

<meta charset="utf-8" name="viewport" content="width=device-width, initial-scale=1.0"> 
</head>
<body>
  <%= render 'shared/header' %>
   <div class="container-fluid">
    <div class="row-fluid">
     <aside>
        <div class="span2">
          <% if @ad %>
            <section>
              <%= render 'shared/adInfo' %>
            </section>
          <% elsif @product %>
            <section>
              <%= render 'shared/productInfo' %>
            </section>
          <% else %>
  	    <section>
 	      <%= render 'shared/userInfo' %>
  	    </section>
	    <br>
            <section>
 	      <%= render 'shared/userpage_links' %>
	    </section>
          <% end %>
        </div>
        <div class="span6 offset1">  
          <% if flash[:notice] %>
  	  <redcolor>*<%= flash[:notice] %>*</redcolor>
          <% end %>
	  <headertag> <%= flash[:title].capitalize %> </headertag>
	  <div id="gallery">
            <ul id="grid">
              <% @groupedads.each do |k, ads| %>
                <%= render :partial => 'adscollection', :locals => { :ads => ads } %>
              <% end %>
            </ul>
          </div>
        </div>
      </aside>
    </div>
</div>
  </body>
  <footer>
	<%= debug(params) %>
	<%= yield :scripts %> 
  </footer>
</html>
