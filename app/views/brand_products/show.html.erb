<!DOCTYPE html> 
<html lang="en"> 
<head> 
<meta charset="utf-8"> 
</head>
<body class="body">
  <%= render 'layouts/header' %>
    <div class="row-fluid">
      <aside>	
        <div class="unit span2">
      	  <h3></h3>
            <ad-title> 
  	      <bold><%= link_to @product.name, @product %>  </bold></ad-title><sub><%= render 'users/followproduct_form', :product => @product, :type => "link" %></sub>
              <ad-title>
              <% if !@product.model.blank? %> | <bold><%= @product.model %>  </bold><% end %>
  	      <% if @brand && !@brand.name.blank? %> | <bold><%= @brand.name %>  </bold><% end %> </ad-title>
          <section>
            <%= render 'shared/stats', :statobject => @product %>
          </section>
	  <br>
          <section>
            <%= render 'shared/productDetails' %>
          </section>
        </div>
        <div class="span4">  
	  <section>
            <%= render 'shared/reviewfeed' %>
          </section>
        </div>
      </aside>
    </div>
   	
  </body>
</html>
