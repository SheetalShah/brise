<%= f.label :user_type %>
<%= select(:user, :user_type,  [[ 'Individual', 'individual'], ['Company','company']]) %><br/>

<%= f.label :city %>
<%= f.text_field :city %><br/>

<%= f.label :state %>
<%= f.text_field :state %><br/>

<%= f.label :country %>
<%= f.country_select :country, ["India"] %>

<%= f.label :zip_code %>
<%= f.text_field :zip_code %>
<a href="#" id="help" class="smallfont" title="Helps find nearest to position ads">Why do I need to provide my address?</a>
<%= f.label "Tell us something about yourself that will help others understand your personality better" %>
<%= f.text_area :description, placeholder: "e.g. I love reading" %>
<%= f.fields_for :company do |c| %>
  <%= render "/layouts/signup_company_details", :c => c %>
<% end %>





  


	  
