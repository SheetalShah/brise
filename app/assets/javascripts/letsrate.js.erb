$.fn.raty.defaults.path = "/assets"; 
$.fn.raty.defaults.half_show = true;  
 
$(function(){ 
	$(".star").raty({			       
		score: function(){
			return $(this).attr('data-rating')				
		}, 
		number: function() {
			return $(this).attr('data-star-count')
		}, 
                readOnly: function() {
			return $(this).attr('data-readOnly')
		},
                      
	});  
});
